<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:movitech="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.movitech.mobilesafe.activity.SettingActivity"
    android:orientation="vertical">
    <TextView
        style="@style/TitleStyle"
        android:text="设置中心"
        />
    <com.movitech.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        movitech:title_value="自动更新设置"
        movitech:desc_on="自动更新已开启"
        movitech:desc_off="自动更新已关闭"
        >

    </com.movitech.mobilesafe.view.SettingItemView>

    <com.movitech.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        movitech:title_value="电话归属地显示设置"
        movitech:desc_on="归属地显示已开启"
        movitech:desc_off="归属地显示已关闭"
        >
    </com.movitech.mobilesafe.view.SettingItemView>
    <com.movitech.mobilesafe.view.SettingClickView
        android:id="@+id/scv_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </com.movitech.mobilesafe.view.SettingClickView>
    <com.movitech.mobilesafe.view.SettingClickView
        android:id="@+id/scv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </com.movitech.mobilesafe.view.SettingClickView>

</LinearLayout>
